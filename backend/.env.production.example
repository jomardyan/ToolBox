# Production Backend Environment Variables
# Copy this file to .env.production and fill in actual values

# ===== Server Configuration =====
NODE_ENV=production
PORT=3000

# ===== Database =====
DATABASE_URL=postgresql://user:password@localhost:5432/toolbox_prod

# ===== JWT Secrets =====
# Generate with: openssl rand -base64 32
JWT_SECRET=CHANGE_THIS_TO_SECURE_RANDOM_VALUE_MIN_32_CHARS
JWT_REFRESH_SECRET=CHANGE_THIS_TO_DIFFERENT_SECURE_RANDOM_VALUE_MIN_32_CHARS
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ===== Frontend Configuration =====
FRONTEND_URL=https://yourdomain.com
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ===== Redis (Optional for distributed rate limiting) =====
REDIS_URL=redis://localhost:6379

# ===== Email Service (SMTP) =====
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_NAME=ToolBox API
SMTP_FROM_EMAIL=noreply@yourdomain.com

# ===== Stripe Payment Processing =====
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_CURRENCY=usd

# ===== OAuth Providers =====
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=https://yourdomain.com/api/oauth/google/callback

# ===== Security =====
ENCRYPTION_KEY=your_32_char_encryption_key_here
SESSION_SECRET=your_session_secret_here

# ===== Monitoring & Logging =====
LOG_LEVEL=info
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project

# ===== Rate Limiting =====
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=200

# ===== Feature Flags =====
ENABLE_SWAGGER=false
ENABLE_METRICS=true
ENABLE_2FA=true
ENABLE_OAUTH=true

# ===== Cloudflare (Optional) =====
CLOUDFLARE_API_KEY=your_cloudflare_api_key
CLOUDFLARE_ZONE_ID=your_cloudflare_zone_id
