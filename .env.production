# Production Environment Configuration
# SECURITY CRITICAL: All values must be strong, properly configured
# Never commit actual secrets to git - use proper secret management

# Server
NODE_ENV=production
PORT=3000
LOG_LEVEL=info

# Database - PostgreSQL for production
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://toolbox_user:CHANGE_ME_STRONG_PASSWORD@postgres:5432/toolbox_production

# JWT - MUST be strong, 32+ characters
# Generate with: openssl rand -base64 32
JWT_SECRET=CHANGE_ME_STRONG_JWT_SECRET_MIN_32_CHARS_REQUIRED
JWT_REFRESH_SECRET=CHANGE_ME_STRONG_REFRESH_SECRET_MIN_32_CHARS
JWT_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# CORS - Restrict to actual production domains
CORS_ORIGINS=https://example.com,https://www.example.com,https://app.example.com

# Frontend URL
FRONTEND_URL=https://example.com

# Email/SMTP - Production email service
SMTP_ENABLED=true
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=SG.CHANGE_ME_SENDGRID_API_KEY
SMTP_FROM=noreply@example.com

# Stripe - Live keys
STRIPE_SECRET_KEY=sk_live_CHANGE_ME_LIVE_SECRET_KEY
STRIPE_PUBLISHABLE_KEY=pk_live_CHANGE_ME_LIVE_PUBLISHABLE_KEY
STRIPE_WEBHOOK_SECRET=whsec_CHANGE_ME_LIVE_WEBHOOK_SECRET

# OAuth - Production credentials (confidential - use secret management)
GOOGLE_CLIENT_ID=CHANGE_ME_GOOGLE_CLIENT_ID
GOOGLE_CLIENT_SECRET=CHANGE_ME_GOOGLE_CLIENT_SECRET
GITHUB_CLIENT_ID=CHANGE_ME_GITHUB_CLIENT_ID
GITHUB_CLIENT_SECRET=CHANGE_ME_GITHUB_CLIENT_SECRET

# Rate Limiting - Stricter in production
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload - Smaller limit in production
MAX_FILE_SIZE=52428800

# Redis - Session and cache storage
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD

# Monitoring
SENTRY_DSN=CHANGE_ME_SENTRY_DSN
DATADOG_API_KEY=CHANGE_ME_DATADOG_API_KEY

# Admin Settings
ADMIN_EMAIL=admin@example.com
