# Environment Variables Template

## Application
NODE_ENV=production
LOG_LEVEL=info
PORT=3000

## Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/toolbox_db
DB_USER=toolbox_user
DB_PASSWORD=secure_password_here
DB_NAME=toolbox_db
DB_HOST=postgres
DB_PORT=5432

## JWT & Authentication
JWT_SECRET=your_jwt_secret_key_min_32_chars
JWT_EXPIRE=15m
REFRESH_TOKEN_SECRET=your_refresh_token_secret_min_32_chars
REFRESH_TOKEN_EXPIRE=7d

## Stripe (Payment Processing)
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

## Email Service (SendGrid)
SENDGRID_API_KEY=SG.your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@example.com
SENDGRID_FROM_NAME=ToolBox

## Frontend Configuration
FRONTEND_API_URL=https://api.example.com
VITE_API_URL=https://api.example.com
VITE_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key

## Redis (Caching & Sessions)
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=

## Twilio (SMS, optional)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

## Sentry (Error Tracking, optional)
SENTRY_DSN=https://your_sentry_dsn

## Admin Settings
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=secure_admin_password

## CORS Settings
CORS_ORIGIN=https://example.com,https://www.example.com

## Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=15

## SSL/TLS
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

## Image Registry (Docker)
IMAGE_REGISTRY=ghcr.io/username/toolbox
